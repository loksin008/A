#!/bin/bash

# Set terminal to black background
clear
tput civis  # Hide cursor

# Define star symbol and delay time
STAR="*"
DELAY=0.1

# Get terminal dimensions
rows=$(tput lines)
cols=$(tput cols)

# Infinite loop to display sparkling stars
while true; do
  # Randomly choose a position in the terminal
  rand_row=$((RANDOM % rows))
  rand_col=$((RANDOM % cols))

  # Move cursor to the random position
  tput cup $rand_row $rand_col

  # Print the star
  echo -n "$STAR"

  # Sleep for a small time to create the sparkling effect
  sleep $DELAY

  # Clear the screen (simulate star disappearing)
  tput cup $rand_row $rand_col
  echo -n " "

  # Sleep again for the delay
  sleep $DELAY
done
