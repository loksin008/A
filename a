#!/bin/bash

# Define colors
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
MAGENTA="\033[35m"
CYAN="\033[36m"
RESET="\033[0m"
BLINK="\033[5m"
BOLD="\033[1m"

# Define moderate-sized numbers using ASCII art
declare -A numbers
numbers[0]=" █████  
█     █ 
█     █ 
█     █ 
█     █ 
█     █ 
 █████  "
numbers[1]="   █    
   █    
   █    
   █    
   █    
   █    
   █    "
numbers[2]=" █████  
      █ 
 █████  
 █      
 █      
 █████  "
numbers[3]=" █████  
      █ 
 █████  
      █ 
      █ 
 █████  "
numbers[4]=" █     █ 
 █     █ 
 ███████ 
      █   
      █    
      █    "
numbers[5]=" █████  
 █      
 █████  
      █ 
      █ 
 █████  "
numbers[6]=" █████  
 █      
 █████  
 █     █ 
 █     █ 
 █████  "
numbers[7]=" █████  
      █ 
      █    
     █    
    █     
   █      "
numbers[8]=" █████  
 █     █ 
 █████  
 █     █ 
 █     █ 
 █████  "
numbers[9]=" █████  
 █     █ 
 █████  
      █ 
      █ 
 █████  "

# Function to display time with a blinking border and big bold numbers
display_time() {
  # Get terminal size
  rows=$(tput lines)
  cols=$(tput cols)

  # Get current time
  current_time=$(date +"%T")
  hours=$(echo $current_time | cut -d ':' -f 1)
  minutes=$(echo $current_time | cut -d ':' -f 2)
  seconds=$(echo $current_time | cut -d ':' -f 3)

  # Select random color for the time
  color=$((RANDOM % 6))
  case $color in
    0) COLOR=$RED ;;
    1) COLOR=$GREEN ;;
    2) COLOR=$YELLOW ;;
    3) COLOR=$BLUE ;;
    4) COLOR=$MAGENTA ;;
    5) COLOR=$CYAN ;;
  esac

  # Create a blinking border using ANSI escape codes
  border_top=$(printf "%-${cols}s" " " | tr " " "-")
  border_bottom=$(printf "%-${cols}s" " " | tr " " "-")
  border_left=$(printf "%-${rows}s" " " | tr " " "|")
  border_right=$(printf "%-${rows}s" " " | tr " " "|")

  # Print the blinking border (top and bottom)
  echo -e "${BLINK}${border_top}${RESET}"

  # Function to print a large number
  print_large_number() {
    local num=$1
    for i in {0..5}; do
      for j in $(echo "$num" | fold -w1); do
        echo -n "${numbers[$j]}" | sed -n "$((i+1))p"
        echo -n "   "
      done
      echo
    done
  }

  # Print the time with large numbers (hours:minutes:seconds)
  for i in {0..5}; do
    if [[ $i == 0 ]]; then
      print_large_number $hours
    elif [[ $i == 1 ]]; then
      print_large_number ":"
    elif [[ $i == 2 ]]; then
      print_large_number $minutes
    elif [[ $i == 3 ]]; then
      print_large_number ":"
    elif [[ $i == 4 ]]; then
      print_large_number $seconds
    fi
  done

  # Print the blinking border (bottom)
  echo -e "${BLINK}${border_bottom}${RESET}"
}

# Infinite loop to update the time every second
while true; do
  clear
  display_time
  sleep 1
done
